# ========================================

# Node Environment
NODE_ENV=development

# Application
PORT=3001
HOST=0.0.0.0

# ========================================
# Strapi CMS - Development
# ========================================
NEXT_PUBLIC_STRAPI_URL=https://dev-cms.zweitmeinu.ng/api

# ========================================
# Error Tracking - Sentry Development
# ========================================
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
